{
    // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
    // 기존 특성에 대한 설명을 보려면 가리킵니다.
    // 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "ES6 UNIT Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "${file}",
                "--require",
                "babel-core/register",
                "-u",
                "tdd",
                "--colors"
            ],
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "testing"
            },
            "runtimeArgs": [
                "--nolazy"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to local",
            "port": 9229,
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Dev1",
            "address": "localhost",
            "port": 19229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/home/rezoome/git/rezoome/",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Dev2",
            "address": "localhost",
            "port": 29229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/home/rezoome/git/rezoome/",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Rezoome Start",
            "program": "C:/Program Files/nodejs/node_modules/npm/bin/npm",
            "args": [
                "start",
            ],
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "testing"
            },
            "runtimeArgs": [
                "--nolazy"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist"
            ]
        }
    ]
}